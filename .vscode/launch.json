{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Desktop Main",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "STT_SERVICE_HOST": "127.0.0.1",
                "STT_SERVICE_PORT": "5002",
                "TRANSLATE_SERVICE_HOST": "127.0.0.1",
                "TRANSLATE_SERVICE_PORT": "5001"
            },
            "console": "integratedTerminal"
        },
        {
            "name": "Server",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "server:app",
                "--host",
                "0.0.0.0",
                "--port",
                "8000"
            ],
            "python": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "STT_SERVICE_HOST": "127.0.0.1",
                "STT_SERVICE_PORT": "5002",
                "TRANSLATE_SERVICE_HOST": "127.0.0.1",
                "TRANSLATE_SERVICE_PORT": "5001",
                "TTS_HTTP_URL": "http://127.0.0.1:8004",
                "TTS_STREAM_URL": "ws://127.0.0.1:8004/ws/tts-stream"
            },
            "console": "integratedTerminal"
        }
    ]
}
